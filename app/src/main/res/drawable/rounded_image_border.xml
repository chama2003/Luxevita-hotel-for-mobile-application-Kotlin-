<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (white in this case) -->
    <solid android:color="#FFFFFF"/>

    <!-- Border color and width -->
    <stroke
        android:color="#00EB08"
    android:width="2dp"/>  <!-- Border width -->

    <!-- Rounded corners -->
    <corners android:radius="16dp"/> <!-- Rounded corners with 16dp radius -->

    <!-- Optional padding inside the border -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp"/>
</shape>
