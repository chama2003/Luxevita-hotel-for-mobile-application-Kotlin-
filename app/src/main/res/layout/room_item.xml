<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <!-- room_item.xml -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/rounded_card_background"
        android:elevation="8dp"
        android:layout_margin="8dp"
        tools:ignore="MissingConstraints">

        <!-- Room Image -->

        <!-- Room Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- Room Title -->
            <TextView
                android:id="@+id/roomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="Modern Suite"
                android:textColor="#4CAF50"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Room Description -->
            <TextView
                android:id="@+id/roomDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A spacious and comfortable room with modern amenities."
                android:textColor="#3498DB"
                android:textSize="14sp"
                android:paddingTop="4dp" />

            <!-- Room Price -->
            <TextView
                android:id="@+id/roomPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rs.6,000"
                android:textColor="#14D1C4"
                android:textSize="28sp"
                android:layout_marginTop="8dp"
                android:textStyle="bold" />

            <!-- Book Now Button -->
            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Now"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginTop="12dp"
                android:layout_gravity="center" />

            <ImageView
                android:id="@+id/roomImage"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_image_border"
                android:contentDescription="Room Image"
                android:scaleType="centerCrop"
                android:src="@drawable/a" />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
